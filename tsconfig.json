{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "strict": true,
    "skipLibCheck": true,
    "lib": ["ES2020", "DOM"],

    "useDefineForClassFields": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false
  },
  "include": ["src/**/*"]
}
